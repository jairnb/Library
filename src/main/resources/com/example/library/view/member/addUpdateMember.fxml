            <children>
                <Button fx:id="saveButton" layoutX="156.0" layoutY="14.0" mnemonicParsing="false"  prefHeight="26.0" prefWidth="120.0" text="Save" />
                <Button fx:id="cancelButton" layoutX="279.0" layoutY="14.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="113.0" text="Cancel" />
            </children>
        </Pane>
