<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.library.controller.AuthorController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <Pane prefHeight="350.0" prefWidth="433.0">
            <children>
                <TextField fx:id="lastName" layoutX="199.0" layoutY="60.0" prefHeight="26.0" prefWidth="194.0" promptText="Last Name" />
                <TextField fx:id="firstName" layoutX="36.0" layoutY="60.0" prefHeight="26.0" prefWidth="150.0" promptText="First Name" />
                <TextField fx:id="phoneNumber" layoutX="35.0" layoutY="94.0" prefHeight="26.0" prefWidth="360.0" promptText="Phone Number: Phone number must contain only numbers" />
                <TextField fx:id="street" layoutX="35.0" layoutY="128.0" prefHeight="26.0" prefWidth="360.0" promptText="Street" />
                <TextField fx:id="zip" layoutX="202.0" layoutY="204.0" prefHeight="26.0" prefWidth="194.0" promptText="Enter 5 digits only zip number" />
                <Label fx:id="title" alignment="CENTER" contentDisplay="CENTER" layoutX="140.0" prefHeight="46.0" prefWidth="150.0" text="Add Author" textAlignment="CENTER">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <font>
                        <Font name="System Bold" size="17.0" />
                    </font>
                </Label>
                <TextField fx:id="state" layoutX="35.0" layoutY="204.0" prefHeight="26.0" prefWidth="150.0" promptText="State" />
                <TextField fx:id="city" layoutX="35.0" layoutY="166.0" prefHeight="26.0" prefWidth="360.0" promptText="City" />
                <TextField fx:id="memberId" layoutX="82.0" layoutY="47.0" prefHeight="26.0" prefWidth="75.0" promptText="memberId" visible="false" />
                <TextField fx:id="credentials" layoutX="35.0" layoutY="243.0" prefHeight="26.0" prefWidth="360.0" promptText="Credentials" />
                <TextArea fx:id="shortBio" layoutX="35.0" layoutY="278.0" prefHeight="67.0" prefWidth="360.0" promptText="Short biography" />
            </children>
        </Pane>
        <Pane layoutY="350.0" prefHeight="51.0" prefWidth="424.0">
            <children>
                <Button fx:id="saveButton" layoutX="204.0" layoutY="13.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="95.0" text="Save" />
                <Button fx:id="cancelButton" layoutX="307.0" layoutY="13.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="88.0" text="Cancel" />
            </children>
        </Pane>
    </children>
</AnchorPane>
